<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/super_light_gray"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:id="@+id/event_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Event Title"
        android:textColor="@android:color/black"
        android:textSize="@dimen/event_detail_title_text_size" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:id="@+id/event_detail_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="12:00AM - 12:00PM" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:id="@+id/event_detail_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Leutner Pavillion" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:id="@+id/event_detail_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:paddingTop="15dp"
        android:text="Description"
        android:textColor="@android:color/black"
        android:textSize="@dimen/event_detail_description_text_size" />

    <ImageView
        android:id="@+id/event_detail_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

</LinearLayout>