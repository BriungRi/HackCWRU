<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Credits"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brian Li "
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/brian_description" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Dylan Plummer "
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/dylan_description" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Anna Sedlackova "
        android:textColor="@android:color/black"
        android:textSize="25sp" />

    <cwru.edu.hackcwru.ui.OpenSansTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/anna_description" />
</LinearLayout>